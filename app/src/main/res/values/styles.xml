<resources>
    <style name="Widget.Theme.FlashCat.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.FlashCat.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="TermDefinitionTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>