<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    style="@style/BORDER">

    <TextView
        android:id="@+id/txt_definition_result_correct"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:gravity="center"
        android:text="Definition"
        android:textSize="22sp"
        android:fontFamily="@font/inter_semibold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6E6E6E"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="205dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_term_result_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="56dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="Term"
                android:textColor="#669854"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toStartOf="@+id/txt_term_result_correct"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/correct" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#6E6E6E"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="205dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_term_result_incorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="56dp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:text="Term"
                android:textColor="#BF4A4A"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toStartOf="@+id/txt_term_result_incorrect"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/incorrect" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>