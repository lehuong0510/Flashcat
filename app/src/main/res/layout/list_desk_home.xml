<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootview_desk"
    android:layout_width="280dp"
    android:layout_height="160dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bord_delete">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Delete"
            android:textSize="20sp"
            android:layout_toStartOf="@id/img_delete"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"

            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_foreground_desk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/DESK">
        <TextView
        android:id="@+id/txt_DeskName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/desk_name"
        android:textSize="25sp"
        style="@style/TEXT"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_NumberCard"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/inter"
            android:text="2"
            android:paddingRight="10dp"
            android:textSize="20sp"
            style="@style/TEXT"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/inter"
            android:text="cards"
            android:textSize="20sp"
            style="@style/TEXT"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_create_day"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/inter"
        android:text="18/10/2023"
        android:textSize="20sp"
        android:inputType="date"
        android:layout_margin="20dp"
        style="@style/TEXT"
        />

    </LinearLayout>
</RelativeLayout>