<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context=".Activity.Practice.MultipleChoiceActivity">

    <LinearLayout
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_close_multiple_choice"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/transparent"
            android:contentDescription="close"
            android:src="@drawable/close"
            style="@style/ICON"/>

        <TextView
            android:id="@+id/txt_number_multiple_choice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2/16"
            android:textSize="27sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="208dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/question"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_answerA"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="510dp"
        android:text="@string/answerA"
        android:background="@drawable/bord_flashcard"
        style="@style/MATCH"
        android:textSize="18sp"
        android:fontFamily="@font/inter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_answerB"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="584dp"
        android:background="@drawable/bord_flashcard"
        style="@style/MATCH"
        android:textSize="18sp"
        android:fontFamily="@font/inter"
        android:text="@string/answerB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_answerC"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="654dp"
        android:text="@string/answerC"
        android:background="@drawable/bord_flashcard"
        style="@style/MATCH"
        android:textSize="18sp"
        android:fontFamily="@font/inter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_answerD"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginTop="724dp"
        android:text="@string/answerD"
        android:background="@drawable/bord_flashcard"
        style="@style/MATCH"
        android:textSize="18sp"
        android:fontFamily="@font/inter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>