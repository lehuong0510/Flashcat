<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    style="@style/DESK_DIALOG">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back_dialog_desk"
            android:layout_width="50dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/transparent"
            android:contentDescription="@string/back"
            android:layout_weight="1"
            android:src="@drawable/back"
            style="@style/ICON"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="18" />
        <Button
            android:id="@+id/btn_done_dialog_desk"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:fontFamily="sans-serif"
            android:text="Done"
            android:layout_weight="1"
            style="@style/SAVE"
            android:backgroundTint="@color/transparent"
            android:textSize="24sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/balsamiq_sans_bold"
        android:gravity="center"
        android:text="@string/desk_name"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_name_desk"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="117dp"
        android:gravity="center"
        android:hint="@string/desk_name"
        android:textSize="20sp"
        style="@style/BORDER_DESK_DIALOG"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>